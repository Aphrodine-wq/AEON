{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "AEON",
  "scopeName": "source.aeon",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#contracts" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.aeon",
          "match": "--.*$"
        },
        {
          "name": "comment.block.aeon",
          "begin": "\\{-",
          "end": "-\\}"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aeon",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aeon",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.aeon",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.aeon",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "contracts": {
      "patterns": [
        {
          "name": "keyword.contract.aeon",
          "match": "\\b(requires|ensures|invariant|assert|assume)\\b"
        },
        {
          "match": "\\b(result)\\b",
          "name": "variable.language.result.aeon"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.aeon",
          "match": "\\b(pure|task|data|effect|handler|type|module|import)\\b"
        },
        {
          "name": "keyword.control.aeon",
          "match": "\\b(if|else|match|case|return|let|in|where|do|with|forall|exists)\\b"
        },
        {
          "name": "keyword.operator.arrow.aeon",
          "match": "->|←|→|=>|\\|"
        },
        {
          "name": "storage.modifier.aeon",
          "match": "\\b(mut|own|ref|borrow)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.aeon",
          "match": "\\b(Int|Float|Bool|String|Void|Unit|Never|Nat)\\b"
        },
        {
          "name": "support.type.collection.aeon",
          "match": "\\b(List|Vec|Map|Set|Option|Result|Maybe|Either)\\b"
        },
        {
          "name": "entity.name.type.aeon",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b(pure|task)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.declaration.aeon" },
            "2": { "name": "entity.name.function.aeon" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.aeon",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.aeon",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.integer.aeon",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.aeon",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.aeon",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.aeon",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.aeon",
          "match": "="
        },
        {
          "name": "keyword.operator.type.aeon",
          "match": ":"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "constant.language.boolean.aeon",
          "match": "\\b(true|false)\\b"
        }
      ]
    }
  }
}
