        "Set-Content \"$dir\\aeon.cmd\" '@echo off`r`ncall \"%~dp0.venv\\Scripts\\activate.bat\"`r`npython -m aeon.cli %*'"
    ],
    "checkver": {
        "github": "https://github.com/aeon-lang/aeon"
    },
